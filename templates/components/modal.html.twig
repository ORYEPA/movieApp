{% block modal %}
    <style>
        #modalGlobal {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
        }

        .modal-container {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .modal-header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-body {
            background-color: white;
            padding: 10px;
            border: 1px solid red;
            width: 520px;
            border-radius: 10px;
        }

        #closeGlobalModal {
            cursor: pointer;
            font-size: 2rem;
        }

    </style>

    <div id="modalGlobal">
        <div class="modal-container">

            <div class="modal-body">
                <div class="modal-header">
                    <span id="titleGlobalModal"></span>
                    <span id="closeGlobalModal">&times;</span>
                </div>
                <div id="bodyGlobalModal">

                </div>
            </div>
        </div>
    </div>

    <script>

        function closeGlobalModal() {
            $("#modalGlobal").hide();
        }

        function openGlobalModal() {
            $("#modalGlobal").show();
        }

        function renderBodyGlobalModal(title = '', body = '') {
            $("#titleGlobalModal").text(title);
            $("#bodyGlobalModal").empty().append(body);
        }

        $("#closeGlobalModal").click(function() {
            closeGlobalModal();
        })

    </script>
{% endblock %}