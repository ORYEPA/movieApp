{%use "user/header.html.twig" %}
{% use 'components/modal.html.twig' %}
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://cdn.tailwindcss.com"></script>



    </head>
    <body>
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block modal %}{{ parent() }}{% endblock %}
    {% block body %}
    <div class="flex flex-col">
        <button  class="modalRegs text-white py-2 px-4 uppercase rounded bg-gray-700 hover:bg-gray-800
                            shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5">
            Meter nuevo Enfermo</button>
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full border text-center text-sm font-light dark:border-neutral-500">
                        <tr>
                            <th scope="col"
                                class="border-r px-6 py-4 dark:border-neutral-500">
                                ID</th>
                            <th scope="col"
                                class="border-r px-6 py-4 dark:border-neutral-500">
                                Nombre del Paciente</th>
                            <th scope="col"
                                class="border-r px-6 py-4 dark:border-neutral-500">
                                Foto del Paciente</th>
                            <th scope="col"
                                class="border-r px-6 py-4 dark:border-neutral-500">
                                Descripción</th>
                            <th scope="col"
                                class="border-r px-6 py-4 dark:border-neutral-500">
                                Doctor</th>
                            <th scope="col"
                                class="border-r px-6 py-4 dark:border-neutral-500">
                                Estudios</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script>

        $( document ).ready(function() {
            $(".modalRegs").on("click", function() {
                console.log("se empezo con el registro del nuevo paciente")
                openGlobalModal()
            });



        });

    </script>



    </body>
</html>
