{% use 'components/modal.html.twig' %}

{% block tablemovieformat %}

    {% block modal %}{{ parent() }}{% endblock %}
    <div class="query grid grid-cols-5 gap-4 bg-gray-900">

        <!-- Renderiza peliculas -->
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script>
        let listuser = [];

        function render(movies){
            let movieInf= []
            let i;
            let elements= [];

            getgenres(movies, function(generes) {

                movies.map(function(movie) {
                    let generesXPelicula = [];
                    generes.map(function(genere) {
                        let generos =[] ;
                        if(movie.genres) {
                            generos = movie.genres
                        }else if(movie.genre_ids) {
                            generos = movie.genre_ids.map(item => {
                                return {
                                    id: item,
                                    name: "NA"
                                }
                            })
                        }

                        generos.map(function(gn) {

                            if(gn.id === genere.id) {

                                var element = `
                                 <span class="genmovie" data-value="${genere.id}">${genere.name}</span>`
                                generesXPelicula.push(element);


                            }
                        });
                    });


                    var element = `<div class="" >
                            <a href="/movie/${movie.id}">
                                <img class="" src="https://image.tmdb.org/t/p/w500${movie.poster_path}" >
                                <h1 class="mb-2 mt-0 text-xl font-medium leading-tight text-primary text-white " >${movie.original_title}
                                </h1>
                            </a>
                            <div class=" grid grid-cols-2 gap-4 bg-gray-900">

                                <svg data-movie="${movie.id} " class="favSelect cursor-pointer fill-grey-500  w-6 h-6"
                                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                  <path  stroke-linecap="round" stroke-linejoin="round"
                                    d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                </svg>
                                <button data-modal-target="defaultModal"
                                data-modal-toggle="defaultModal"
                                data-movieid="${movie.id}"
                                data-movietitle="${movie.original_title}"
                                class="myBtnmodal block text-white bg-blue-700
                                hover:bg-blue-800 focus:ring-4 focus:outline-none
                                focus:ring-blue-300 font-medium rounded-lg text-sm px-5
                                py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700
                                dark:focus:ring-blue-800" type="button">
                                  Add list
                                </button>
                            </div>
                            <p class="text-lg cursor-pointer font-normal text-gray-500 lg:text-xl dark:text-gray-400" >${generesXPelicula.join(', ')}</p>

                        </div>
                        `
                    movieInf.push(element);
                    $('.query').empty().append(movieInf.join(''));

                });
            });
        }

