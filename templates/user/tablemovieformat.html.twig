            const settings = {

                url: '/checkfavorite',
                data:{movieid:movieid,
                    action:action}
            };
            $.ajax(settings).done(function (response) {

            });
        }
        function renderlist(cb){
            const settings = {

                url: '/chargelist',
                data:{}
            };
            $.ajax(settings).done(function (response) {
                var listnm=response.list;
                cb(listnm)
            });
        }

        function addmovietolist(movieId, list_id,val, cb){
            const settings = {
                url: '/addmovielist',
                data: {
                    movieid: movieId ,
                    list_id:list_id,
                    val:val
                }
            };
            $.ajax(settings).done(function (response) {
                console.log("aaa!",response.valor);

                if(typeof cb === "function") {
                    cb(response);
                }
                if (response.valor===1){
                    console.log("confirmacion")
                    if (confirm("Â¿Volver a guardar?") == true) {

                        console.log("Guardado")

                        addmovietolist(movieId, list_id,1)



                    } else {
                        console.log("Cancelado")

                    }
                }
            });
        }




        $( document ).ready(function() {


            $('.query').on("click", ".favSelect", function() {
                //$(this).toggleClass( "fill-amber-500" );
                let movieid=$(this).attr("data-movieid");
                // si this tiene la clase fill, quitarsela
                if ($(this).hasClass("fill-grey-500")){
                    $(this).removeClass( "fill-grey-500" ).addClass( "fill-amber-500");

                    checkFavorites(movieid,"add")
                }
                else{
                    $(this).removeClass( "fill-amber-500").addClass(  "fill-grey-500");
                    checkFavorites(movieid,"remove")

                }
            });

            $('.query').on("click",".genmovie",function(){
                let event=$(this).attr("data-value");
                filtergen(event);
            });


            $('.query').on("click",".myBtnmodal",function(){
                let movieid = $(this).attr("data-movieid");
                let movietitle = $(this).attr("data-movietitle");

                renderlist(function (listn) {
                    let options = listn.map(function (kl) {
                        return `<option class=""
                                    value="${kl.listid}"
                                    data-movieid="${movieid}">
                                    ${kl.nameli}
                                </option>`
                    }).join('');
                    openGlobalModal();
                    renderBodyGlobalModal(`${movietitle}`, `
                        <div>
                            <select class="listaDePeliculas">
                            <option value="-1" data-movieid="-1">[Choose]</option>
                            <option value="-2" data-movieid="-2">Nueva</option>
                            ${options}
                            </select>
                        </div>
                    `);
                });
            });


            $("#modalGlobal").on("change", "select.listaDePeliculas", function(ev) {
                let optionSelectedId = $(this).find("option:selected").val();
                let movieId = $(this).find("option:selected").attr("data-movieid");

                if(Number(optionSelectedId) === -1) {
                    alert("La lista es obligatoria");
                }else if(Number(optionSelectedId) === -2) {
                    //Mande a crear lista. mandar nombre de la pelicual
                    // para que ese sea el nombre de la lista
                }else {
                    addmovietolist(movieId, optionSelectedId,0, () => {
                        closeGlobalModal();

                    });

                }
            });
        });
    </script>
