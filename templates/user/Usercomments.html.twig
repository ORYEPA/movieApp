                        response.comments.forEach(comment => {
                            if (!groupedComments[comment.movie_id]) {
                                groupedComments[comment.movie_id] = {
                                    comments: []
                                };
                            }
                            groupedComments[comment.movie_id].comments.push(comment);
                        });

                        getdatatable(groupedComments)


                    });




                }



