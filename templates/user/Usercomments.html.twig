                        movied.comments.map(function (intocommen) {
                            liscom.push(intocommen)
                            movieList.push(intocommen.movie_id)
                        })
                    });
                    const dataArr = new Set(movieList);
                    let movies = [];
                    let movieId = Array.from(dataArr);


                    for (const mId of movieId){
