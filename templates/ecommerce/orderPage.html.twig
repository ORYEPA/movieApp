{% use 'components/productDesc.html.twig' %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Movie{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

</head>
<body>
<div class="w-full flex">
    <div class=" w-9/12 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4 bg-gray-900 ">
aaaaaaaaaaaaaaaaaaaaaaaaaaaa compra
        <!-- Renderiza peliculas -->
    </div>

</div>

{% block modalproduct %}{{ parent() }}{% endblock %}




<script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>

<script>
    function getProducts(){
        const settings = {

            url:'/app/chargeproducts'
        }
        $.ajax(settings).done(function (response) {

            products=response.productos;
            render(products)

        })
    }
    function getCarrito(cb){
        const settings = {

            url:'/app/getCarrito'
        }
        $.ajax(settings).done(function (response) {
            console.log(response.total)

            carrito=response.productos
            let movieInf = []
            let i;
            let elements = [];

            carrito.map(function (product) {

                var element = `<div class="" >
                        <span class="modalDescription" data-productid="${product.id}">
                            <img class="" src="${product.image}" >
                            <h1 class="mb-2 mt-0 text-xl font-medium leading-tight text-primary text-white " >${product.title}
                            </h1>
                        </span>
                        <div class=" grid grid-cols-2 gap-4 bg-gray-900">


                            <button
                            data-productid="${product.id}"
                            data-quantity="${product.quantity}"
                            data-action="resta"
                            class="quantity block text-white bg-blue-700
                            hover:bg-blue-800 " type="button">
                              -
                            </button>
                            <p class="text-primary text-white">"${product.quantity}"</p>

                            <button
                            data-productid="${product.id}"
                            data-quantity="${product.quantity}"
                            data-action="suma"

                            class="quantity block text-white bg-blue-700
                            hover:bg-blue-800  type="button">
                              +
                            </button>
                        </div>

                    </div>
                    `
                movieInf.push(element);


            });
            $("#cardTitle").text(response.total)

            $('.cart').empty().append(movieInf.join(''));
        })
    }
    function updateQuantity(action,idProduct,cb){
        const settings = {

            url:'/app/updateQuantity',
            data:{
                idProduct:idProduct,
                action:action
            }
        }
        $.ajax(settings).done(function (response) {
            console.log(response)
            cb();
        })

    }
    function render(products){
        let movieInf= []
        let i;
        let elements= [];

        products.map(function(product) {

            var element = `<div class="" >
                        <span class="modalDescription" data-productid="${product.id}">
                            <img class="" src="${product.image}" >
                            <h1 class="mb-2 mt-0 text-xl font-medium leading-tight text-primary text-white " >${product.title}
                            </h1>
                        </span>
                        <div class=" grid grid-cols-2 gap-4 bg-gray-900">

                            <svg  class="favSelect cursor-pointer fill-amber-500  w-6 h-6"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                              <path  stroke-linecap="round" stroke-linejoin="round"
                                d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                            </svg>
                            <button
                            data-productid="${product.id}"

                            class="addCart block text-white bg-blue-700
                            hover:bg-blue-800 focus:ring-4 focus:outline-none
                            focus:ring-blue-300 font-medium rounded-lg text-sm px-5
                            py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700
                            dark:focus:ring-blue-800" type="button">
                              Add cart
                            </button>
                        </div>

                    </div>
                    `
            movieInf.push(element);
            $('.query').empty().append(movieInf.join(''));


        });
    }
    function addCart(idProduct,cb){
        const settings = {

            url:'/app/addCart',
            data:{
                idProduct:idProduct
            }
        }
        $.ajax(settings).done(function (response) {
            console.log(response)
            cb()
        })

    }

    $( document ).ready(function() {
        getProducts()
        getCarrito()
        $(".query").on("click", ".modalDescription", function() {

            let productId = $(this).attr("data-productid");
            openGlobalModal(productId);

        });
        $(".query").on("click", ".addCart", function() {
            console.log("se agrego al carrito ")
            let productId = $(this).attr("data-productid");

            addCart(productId,() => {
                getCarrito()
            })

        });
        $(".cart").on("click", ".quantity", function() {
            let action = $(this).attr("data-action");
            let idproduct = $(this).attr("data-productid");
            let quatity = $(this).attr("data-quantity");



            console.log("cambiar la cantidasd", action , quatity)
            updateQuantity(action,idproduct,()=>{
                getCarrito()
            })



        });

    });
</script>
</body>
</html>
